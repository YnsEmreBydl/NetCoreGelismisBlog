@model NetCoreGelismisBlog.Models.AddWriterImage
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        @Html.HiddenFor(x => x.WriterID, new { @class = "form-control" })
                        <label for="exampleInputUsername1">Resim Seç</label>

                        <input type="file" name="WriterImage" value="" />
                        @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputUsername1">Ad Soyad</label>
                        @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Şifre</label>
                        @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputConfirmPassword1">Hakkımda</label>
                        @Html.TextAreaFor(x => x.WriterAbout, new { @class = "form-control" })
                    </div>
                  

                    <button type="submit" class="btn btn-gradient-primary mr-2">Ekle</button>
                </form>


            </div>
        </div>
    </div>

</div>



